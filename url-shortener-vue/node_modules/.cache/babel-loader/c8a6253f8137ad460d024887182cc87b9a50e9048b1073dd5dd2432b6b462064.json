{"ast":null,"code":"export default {\n  data() {\n    return {\n      longUrl: '',\n      shortenedUrl: null,\n      redirectMode: false,\n      loading: false,\n      shortenedUrls: [],\n      displayedShortenedUrls: [],\n      showMoreCount: 5,\n      urlStats: []\n    };\n  },\n  computed: {\n    showLessButtonVisible() {\n      return this.displayedShortenedUrls.length > 5;\n    }\n  },\n  methods: {\n    async shortenUrl() {\n      try {\n        let inputUrl = this.longUrl.trim();\n\n        // Add \"http://\" if not present\n        if (!inputUrl.startsWith('http://') && !inputUrl.startsWith('https://')) {\n          inputUrl = `http://${inputUrl}`;\n        }\n        const response = await fetch('http://127.0.0.1:8000/api/shorten', {\n          method: 'POST',\n          headers: {\n            'Content-Type': 'application/json'\n          },\n          body: JSON.stringify({\n            longUrl: inputUrl\n          })\n        });\n        if (!response.ok) {\n          throw new Error('Error shortening URL');\n        }\n        const data = await response.json();\n        this.shortenedUrl = data.short_url;\n        this.longUrl = '';\n      } catch (error) {\n        console.error(error);\n      }\n    },\n    async handleRedirect(url) {\n      const constructedUrl = `http://127.0.0.1:8000/api/${this.shortenedUrl}`;\n      console.log(constructedUrl);\n      await this.incrementClickCount(url.id);\n      await this.fetchShortenedUrls();\n      window.open(constructedUrl, '_blank');\n    },\n    async incrementClickCount(urlId) {\n      try {\n        const response = await fetch(`http://127.0.0.1:8000/api/increment-click-count/${urlId}`, {\n          method: 'POST'\n        });\n        if (!response.ok) {\n          throw new Error('Error incrementing click count');\n        }\n      } catch (error) {\n        console.error(error);\n      }\n    },\n    async fetchShortenedUrls() {\n      try {\n        const response = await fetch('http://127.0.0.1:8000/api/shortened-urls');\n        if (!response.ok) {\n          throw new Error('Error fetching shortened URLs');\n        }\n        const data = await response.json();\n        this.shortenedUrls = data.shortenedUrls;\n        this.displayedShortenedUrls = this.shortenedUrls.slice(0, this.showMoreCount);\n      } catch (error) {\n        console.error(error);\n      }\n    },\n    async fetchUrlStats() {\n      try {\n        const response = await fetch('http://127.0.0.1:8000/url-stats');\n        if (!response.ok) {\n          throw new Error('Error fetching URL stats');\n        }\n        const data = await response.json();\n        this.urlStats = data.stats;\n      } catch (error) {\n        console.error('Error fetching URL stats:', error);\n      }\n    },\n    showMore() {\n      this.displayedShortenedUrls = this.shortenedUrls.slice(0, this.displayedShortenedUrls.length + this.showMoreCount);\n    },\n    showLess() {\n      const rowsToHide = Math.min(this.showMoreCount, this.displayedShortenedUrls.length);\n      this.displayedShortenedUrls = this.displayedShortenedUrls.slice(0, -rowsToHide);\n    }\n  },\n  mounted() {\n    this.fetchShortenedUrls();\n    if (this.$route.params.shortUrl) {\n      this.redirectMode = true;\n      this.handleRedirect();\n    }\n  }\n};","map":{"version":3,"names":["data","longUrl","shortenedUrl","redirectMode","loading","shortenedUrls","displayedShortenedUrls","showMoreCount","urlStats","computed","showLessButtonVisible","length","methods","shortenUrl","inputUrl","trim","startsWith","response","fetch","method","headers","body","JSON","stringify","ok","Error","json","short_url","error","console","handleRedirect","url","constructedUrl","log","incrementClickCount","id","fetchShortenedUrls","window","open","urlId","slice","fetchUrlStats","stats","showMore","showLess","rowsToHide","Math","min","mounted","$route","params","shortUrl"],"sources":["src/components/UrlShortener.vue"],"sourcesContent":["<template>\r\n  <div class=\"url-shortener\">\r\n    <h1 class=\"title\">URL Shortener</h1>\r\n    <form v-if=\"!redirectMode\" @submit.prevent=\"shortenUrl\" class=\"url-box\">\r\n      <label for=\"longUrl\" class=\"label\">Long URL:</label>\r\n      <input v-model=\"longUrl\" type=\"text\" id=\"longUrl\" class=\"input\" required>\r\n      <button type=\"submit\" class=\"button\" :disabled=\"loading\">\r\n        <span v-if=\"loading\">Loading...</span>\r\n        <span v-else>Shorten URL</span>\r\n      </button>\r\n    </form>\r\n    <div v-else>\r\n      <h1>Redirecting...</h1>\r\n    </div>\r\n    <p v-if=\"shortenedUrl\" class=\"shortened-url\">\r\n      Shortened URL: <a :href=\"shortenedUrl\" @click.prevent=\"handleRedirect\" target=\"_blank\">{{ shortenedUrl }}</a>\r\n    </p>\r\n\r\n    <!-- Display List of Shortened URLs -->\r\n    <div class=\"shortened-url-list\">\r\n      <h2>Previously Shortened URLs</h2>\r\n      <table>\r\n        <thead>\r\n          <tr>\r\n            <th>Long URL</th>\r\n            <th>Short URL</th>\r\n            <th>Click Count</th>\r\n          </tr>\r\n        </thead>\r\n        <tbody>\r\n          <tr v-for=\"url in displayedShortenedUrls\" :key=\"url.id\">\r\n            <td>{{ url.long_url }}</td>\r\n            <td>\r\n              <a :href=\"`http://127.0.0.1:8000/api/${url.short_url}`\" target=\"_blank\" @click=\"handleRedirect(url)\">\r\n                {{ url.short_url }}\r\n              </a>\r\n            </td>\r\n            <td>{{ url.click_count }}</td>\r\n          </tr>\r\n        </tbody>\r\n      </table>\r\n      <div class=\"button-container\">\r\n        <button v-if=\"displayedShortenedUrls.length > 10\" @click=\"showLess\" class=\"show-button show-less-button\" style=\"background-color: #e74c3c; color: #ffffff; margin-right: 5px;\">Show Less</button>\r\n        <button v-if=\"displayedShortenedUrls.length < shortenedUrls.length\" @click=\"showMore\" class=\"show-button\" style=\"margin-left: 5px;\">Show More</button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      longUrl: '',\r\n      shortenedUrl: null,\r\n      redirectMode: false,\r\n      loading: false,\r\n      shortenedUrls: [],\r\n      displayedShortenedUrls: [],\r\n      showMoreCount: 5,\r\n      urlStats: [],\r\n    };\r\n  },\r\n  computed: {\r\n    showLessButtonVisible() {\r\n      return this.displayedShortenedUrls.length > 5;\r\n    },\r\n  },\r\n  methods: {\r\n    async shortenUrl() {\r\n      try {\r\n        let inputUrl = this.longUrl.trim();\r\n\r\n        // Add \"http://\" if not present\r\n        if (!inputUrl.startsWith('http://') && !inputUrl.startsWith('https://')) {\r\n          inputUrl = `http://${inputUrl}`;\r\n        }\r\n\r\n        const response = await fetch('http://127.0.0.1:8000/api/shorten', {\r\n          method: 'POST',\r\n          headers: {\r\n            'Content-Type': 'application/json',\r\n          },\r\n          body: JSON.stringify({ longUrl: inputUrl }),\r\n        });\r\n\r\n        if (!response.ok) {\r\n          throw new Error('Error shortening URL');\r\n        }\r\n\r\n        const data = await response.json();\r\n        this.shortenedUrl = data.short_url;\r\n        this.longUrl = '';\r\n      } catch (error) {\r\n        console.error(error);\r\n      }\r\n    },\r\n\r\n    async handleRedirect(url) {\r\n      const constructedUrl = `http://127.0.0.1:8000/api/${this.shortenedUrl}`;\r\n      console.log(constructedUrl);\r\n      await this.incrementClickCount(url.id);\r\n      await this.fetchShortenedUrls();\r\n      window.open(constructedUrl, '_blank');\r\n    },\r\n\r\n    async incrementClickCount(urlId) {\r\n      try {\r\n        const response = await fetch(`http://127.0.0.1:8000/api/increment-click-count/${urlId}`, {\r\n          method: 'POST',\r\n        });\r\n\r\n        if (!response.ok) {\r\n          throw new Error('Error incrementing click count');\r\n        }\r\n      } catch (error) {\r\n        console.error(error);\r\n      }\r\n    },\r\n\r\n    async fetchShortenedUrls() {\r\n      try {\r\n        const response = await fetch('http://127.0.0.1:8000/api/shortened-urls');\r\n        if (!response.ok) {\r\n          throw new Error('Error fetching shortened URLs');\r\n        }\r\n        const data = await response.json();\r\n        this.shortenedUrls = data.shortenedUrls;\r\n        this.displayedShortenedUrls = this.shortenedUrls.slice(0, this.showMoreCount);\r\n      } catch (error) {\r\n        console.error(error);\r\n      }\r\n    },\r\n\r\n    async fetchUrlStats() {\r\n      try {\r\n        const response = await fetch('http://127.0.0.1:8000/url-stats');\r\n        if (!response.ok) {\r\n          throw new Error('Error fetching URL stats');\r\n        }\r\n        const data = await response.json();\r\n        this.urlStats = data.stats;\r\n      } catch (error) {\r\n        console.error('Error fetching URL stats:', error);\r\n      }\r\n    },\r\n\r\n    showMore() {\r\n      this.displayedShortenedUrls = this.shortenedUrls.slice(0, this.displayedShortenedUrls.length + this.showMoreCount);\r\n    },\r\n\r\n    showLess() {\r\n      const rowsToHide = Math.min(this.showMoreCount, this.displayedShortenedUrls.length);\r\n      this.displayedShortenedUrls = this.displayedShortenedUrls.slice(0, -rowsToHide);\r\n    },\r\n  },\r\n  mounted() {\r\n    this.fetchShortenedUrls();\r\n    if (this.$route.params.shortUrl) {\r\n      this.redirectMode = true;\r\n      this.handleRedirect();\r\n    }\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.url-shortener {\r\n  max-width: 400px;\r\n  margin: 100px auto 0;\r\n  padding: 130px;\r\n  background-color: #f0f0f0;\r\n  border-radius: 8px;\r\n  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);\r\n  text-align: center;\r\n}\r\n\r\n.title {\r\n  font-size: 40px;\r\n  margin-bottom: 20px;\r\n  color: #2c3e50;\r\n}\r\n\r\n.url-box {\r\n  background-color: #ffffff;\r\n  padding: 20px;\r\n  border-radius: 8px;\r\n  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n.label {\r\n  font-size: 18px;\r\n  color: #34495e;\r\n  margin-bottom: 12px;\r\n}\r\n\r\n.input {\r\n  width: calc(100% - 16px);\r\n  padding: 8px;\r\n  margin-bottom: 18px;\r\n  border: 1px solid #bdc3c7;\r\n  border-radius: 4px;\r\n}\r\n\r\n.button {\r\n  background-color: #27ae60;\r\n  color: #ffffff;\r\n  padding: 10px 15px;\r\n  border: none;\r\n  border-radius: 4px;\r\n  cursor: pointer;\r\n  transition: background-color 0.3s ease;\r\n}\r\n\r\n.show-more-button {\r\n  margin-top: 10px; /* Adjust the margin as needed */\r\n}\r\n\r\n.button:hover {\r\n  background-color: #219d54;\r\n}\r\n\r\n.button:disabled {\r\n  cursor: not-allowed;\r\n  background-color: #bdc3c7;\r\n}\r\n\r\n.shortened-url-list { /* Added shared style for the table */\r\n  margin-top: 20px;\r\n}\r\n\r\n.shortened-url-list h2 { /* Added shared style for the table heading */\r\n  font-size: 24px;\r\n  color: #2c3e50;\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.shortened-url-list table { /* Added shared style for the table */\r\n  width: 100%;\r\n  border-collapse: collapse;\r\n}\r\n\r\n.shortened-url-list th,\r\n.shortened-url-list td { /* Added shared style for the table cells */\r\n  border: 1px solid #ddd;\r\n  padding: 8px;\r\n  text-align: left;\r\n}\r\n\r\n.shortened-url-list th { /* Added shared style for the table header */\r\n  background-color: #f2f2f2;\r\n}\r\n\r\n.shortened-url-list td a { /* Added shared style for the table link */\r\n  text-decoration: none;\r\n  color: #3498db;\r\n}\r\n\r\n.shortened-url-list td a:hover { /* Added shared style for the table link hover state */\r\n  text-decoration: underline;\r\n}\r\n\r\n.shortened-url-list button { /* Added shared style for the button */\r\n  background-color: #3498db;\r\n  color: #ffffff;\r\n  padding: 8px;\r\n  border: none;\r\n  cursor: pointer;\r\n}\r\n\r\n.shortened-url-list button:disabled { /* Added shared style for the disabled button */\r\n  background-color: #bdc3c7;\r\n  cursor: not-allowed;\r\n}\r\n\r\n.show-button {\r\n  margin-top: 10px;\r\n  padding: 8px;\r\n  cursor: pointer;\r\n}\r\n\r\n.show-less-button {\r\n  background-color: #e74c3c;\r\n  color: #ffffff;  /* White color for Show Less button text */\r\n  margin-left: 5px;  /* Adjusted margin */\r\n}\r\n</style>\r\n"],"mappings":"AAkDA;EACAA,KAAA;IACA;MACAC,OAAA;MACAC,YAAA;MACAC,YAAA;MACAC,OAAA;MACAC,aAAA;MACAC,sBAAA;MACAC,aAAA;MACAC,QAAA;IACA;EACA;EACAC,QAAA;IACAC,sBAAA;MACA,YAAAJ,sBAAA,CAAAK,MAAA;IACA;EACA;EACAC,OAAA;IACA,MAAAC,WAAA;MACA;QACA,IAAAC,QAAA,QAAAb,OAAA,CAAAc,IAAA;;QAEA;QACA,KAAAD,QAAA,CAAAE,UAAA,gBAAAF,QAAA,CAAAE,UAAA;UACAF,QAAA,aAAAA,QAAA;QACA;QAEA,MAAAG,QAAA,SAAAC,KAAA;UACAC,MAAA;UACAC,OAAA;YACA;UACA;UACAC,IAAA,EAAAC,IAAA,CAAAC,SAAA;YAAAtB,OAAA,EAAAa;UAAA;QACA;QAEA,KAAAG,QAAA,CAAAO,EAAA;UACA,UAAAC,KAAA;QACA;QAEA,MAAAzB,IAAA,SAAAiB,QAAA,CAAAS,IAAA;QACA,KAAAxB,YAAA,GAAAF,IAAA,CAAA2B,SAAA;QACA,KAAA1B,OAAA;MACA,SAAA2B,KAAA;QACAC,OAAA,CAAAD,KAAA,CAAAA,KAAA;MACA;IACA;IAEA,MAAAE,eAAAC,GAAA;MACA,MAAAC,cAAA,qCAAA9B,YAAA;MACA2B,OAAA,CAAAI,GAAA,CAAAD,cAAA;MACA,WAAAE,mBAAA,CAAAH,GAAA,CAAAI,EAAA;MACA,WAAAC,kBAAA;MACAC,MAAA,CAAAC,IAAA,CAAAN,cAAA;IACA;IAEA,MAAAE,oBAAAK,KAAA;MACA;QACA,MAAAtB,QAAA,SAAAC,KAAA,oDAAAqB,KAAA;UACApB,MAAA;QACA;QAEA,KAAAF,QAAA,CAAAO,EAAA;UACA,UAAAC,KAAA;QACA;MACA,SAAAG,KAAA;QACAC,OAAA,CAAAD,KAAA,CAAAA,KAAA;MACA;IACA;IAEA,MAAAQ,mBAAA;MACA;QACA,MAAAnB,QAAA,SAAAC,KAAA;QACA,KAAAD,QAAA,CAAAO,EAAA;UACA,UAAAC,KAAA;QACA;QACA,MAAAzB,IAAA,SAAAiB,QAAA,CAAAS,IAAA;QACA,KAAArB,aAAA,GAAAL,IAAA,CAAAK,aAAA;QACA,KAAAC,sBAAA,QAAAD,aAAA,CAAAmC,KAAA,SAAAjC,aAAA;MACA,SAAAqB,KAAA;QACAC,OAAA,CAAAD,KAAA,CAAAA,KAAA;MACA;IACA;IAEA,MAAAa,cAAA;MACA;QACA,MAAAxB,QAAA,SAAAC,KAAA;QACA,KAAAD,QAAA,CAAAO,EAAA;UACA,UAAAC,KAAA;QACA;QACA,MAAAzB,IAAA,SAAAiB,QAAA,CAAAS,IAAA;QACA,KAAAlB,QAAA,GAAAR,IAAA,CAAA0C,KAAA;MACA,SAAAd,KAAA;QACAC,OAAA,CAAAD,KAAA,8BAAAA,KAAA;MACA;IACA;IAEAe,SAAA;MACA,KAAArC,sBAAA,QAAAD,aAAA,CAAAmC,KAAA,SAAAlC,sBAAA,CAAAK,MAAA,QAAA